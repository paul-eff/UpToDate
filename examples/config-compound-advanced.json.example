{
  "url": "https://example-store.com/products",
  "search": {
    "type": "compound",
    "pattern": "(string:sale OR string:discount) AND regex:\\$[0-9]+\\.[0-9]{2}",
    "xpath": "//div[@class='product-info']",
    "notify_on": "found"
  },
  "notifications": {
    "email": {
      "smtp_host": "smtp.gmail.com",
      "smtp_port": 587,
      "username": "your-email@gmail.com",
      "password": "your-app-password",
      "from": "monitor@yourcompany.com",
      "to": "alerts@yourcompany.com",
      "subject": "Product Alert - Sale Found!"
    },
    "discord": {
      "webhook_url": "https://discord.com/api/webhooks/YOUR_WEBHOOK_URL"
    },
    "slack": {
      "webhook_url": "https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK_URL"
    }
  },
  "interval": 300,
  "fetch_method": "http"
}