{
  "url": "https://store.example.com/product/123",
  "search": {
    "type": "regex",
    "pattern": "\\$[0-9]+\\.[0-9]{2}",
    "xpath": "//div[@class='price']",
    "notify_on": "found"
  },
  "notifications": {
    "email": {
      "smtp_host": "smtp.gmail.com",
      "smtp_port": 587,
      "username": "monitor@example.com",
      "password": "your-app-password",
      "from": "monitor@example.com",
      "to": "alerts@example.com",
      "subject": "Price Alert"
    }
  },
  "interval": 600
}